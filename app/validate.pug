extends _layout
include _engin
block inline-script
	script
		include js/validate.html.js
block content
	//- .container-fluid
	+head("请填写身份验证信息")
	.container
		form(name="id-details")
			.form-group
				label(for="cnName") 姓名
				input#cnName(name="cnName" type="text" placeholder="请填写真实姓名" data-storage="cnName" data-validate="cnName")
				+tooltip
			.form-group
				label(for="idType") 证件类型
				select#idType(name="idType" disabled data-toggle="dropdown" data-src="true" data-storage="idType" data-validate="idType")
				button(data-toggle="dropdown").icon &rsaquo;
			.form-group
				label(for="idNo") 证件号
				input#idNo(name="idNo" type="text" placeholder="请填写证件号码" data-storage="idNo" data-validate="idNo")
				+tooltip
			.form-group
				label(for="gender") 性别
				select(disabled  data-toggle="dropdown" data-src="true" data-storage="gender"  data-validate="gender")#gender
					option(value=0 selected) 女士
					option(value=1) 先生
				button(data-toggle="dropdown").icon &rsaquo;
			.form-group
				label(form="dateOfBirth") 出身日期
				input#dateOfBirth(type="date" data-storage="dob"  data-validate="dob")
				+tooltip
			.form-group.validCode
				label(for="validCode") 验证码
				input#validCode(name="validCode" type="text" data-storage="validCode" placeholder="请输入验证码")
				//- img#validCodeImg(src="data:image/gif;base64,")
				img#validCodeImg(src="")
				button#getValidCodeBtn.btn 换一张	
			+warning
			+submit
				|提交
	+modal

